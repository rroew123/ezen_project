<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.yangdoll.MemberDAO"> 

	<select id="getTime" resultType="String">	
		select sysdate from dual
	</select>
	
	<select id="getList" resultType="MemberVO">	
		select * from members
	</select>
	
	<select id="getMember" resultType="MemberVO" parameterType="String">	
		select * from members where memId = #{memId}
	</select>
	
	<insert id="addMember" parameterType="MemberVO">
		insert into members values(#{memId}, #{memName}, #{memPwd}, #{phone}, sysdate)
	</insert>
	
	<delete id="delMember" parameterType="String">
		delete from members where memId = #{memId}
	</delete>
	
	<update id="updateMem" parameterType="MemberVO">
		update members set memName=#{memName}, memPwd=#{memPwd}, phone=#{phone} where memId=#{memId}
	</update>
</mapper>